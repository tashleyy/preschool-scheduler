<%- partial('partials/nav.ejs', {location: 'addafterschoolactivity'}) %>

<div class="container">
    <h1>New After School Activity</h1>

    <div align="left">
        <form>
            <div class="form-group">
                <label for="add-activity-name">Name</label>
                <input type="text" class="form-control" id="add-activity-name" required>
            </div>
            <div class="form-group">
                <label for="add-activity-cost">Cost</label>
                <input type="text" class="form-control" id="add-activity-cost" required>
            </div>
            <button type="submit" class="btn btn-primary" onClick="createAfterSchoolActivity()">Submit</button>
        </form>
    </div>
</div>