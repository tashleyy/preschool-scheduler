<%- partial('partials/nav.ejs', {location: 'afterschoolactivities'}) %>

<div class="container">
    <div class="row">
        <table class="table table-bordered table-striped" id="afterschool-activity-table">
            <thead>
                <th>Afterschool Activity Name</th>
                <th>Cost</th>
                <th>Edit</th>
                <th>Delete</th>
            </thead>
            <tbody align="left">
            </tbody>
        </table>
    </div>
</div>

<div class="container">
    <button type="button"><a href="addafterschoolactivity">Add Afterschool Activity</a></button>
</div>

<div class="modal fade" id="afterschool-activity-edit-modal">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h2>Edit Afterschool Activity</h2>
            </div>
            <div class="modal-body">
                <form>
                    <div class="form-group">
                        <label for="edit-afterschool-activity-name">Name</label>
                        <input type="text" class="form-control" id="edit-afterschool-activity-name" required>
                    </div>
                    <div class="form-group">
                        <label for="edit-afterschool-activity-cost">Cost ($)</label>
                        <input type="text" class="form-control" id="edit-afterschool-activity-cost" required>
                    </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary" onclick="editAfterSchoolActivity()">Submit</button>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="afterschool-activity-delete-modal">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h2>Delete Afterschool Activity</h2>
            </div>
            <div class="modal-body">
                <p>Are you sure you want to delete this activity?</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-primary" onclick="deleteAfterSchoolActivity()">Delete</button>
            </div>
        </div>
    </div>
</div>
