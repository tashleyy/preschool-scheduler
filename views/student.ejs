<%- partial('partials/nav.ejs', {location: 'student'}) %>

<div class="container">
    <h1><%= student.name %></h1>
    <div class="row">
        <table class="table table-bordered table-striped" id="student-info-table">
            <tbody align="left">
                <tr>
                    <th>Birthdate</th>
                    <td><%= student.birthday %></td>
                </tr>

                <tr>
                    <th>Parent/Guardian Name 1</th>
                    <td><%= student.parent1 %></td>
                </tr>
                <tr>
                    <th>Parent/Guardian Name 2</th>
                    <td><%= student.parent2 %></td>
                </tr>
                <tr>
                    <th>Parent/Guardian Phone Number</th>
                    <td><%= student.parentPhone1 %></td>
                </tr>
                <tr>
                    <th>Alternate Phone Number</th>
                    <td><%= student.parentPhone2 %></td>
                </tr>
                <tr>
                    <th>Physician Name</th>
                    <td><%= student.physician %></td>
                </tr>
                <tr>
                    <th>Physician Phone Number</th>
                    <td><%= student.physicianPhone %></td>
                </tr>
                <tr>
                    <th>Rate Schedule</th>
                    <td><%= student.rateSchedules[0].name %></td>
                </tr>
                <tr>
                    <th>Date Enrolled</th>
                    <td><%= student.startDate %></td>
                </tr>
                <tr>
                    <th>Date Left</th>
                    <td><%= student.endDate %></td>
                </tr>
            </tbody>
        </table>   
        <div style="clear:both;"></div>
        <h1>Students Weekly Schedule</h1>
        <table class="table table-bordered table-striped">
            <tbody align="left">
                <tr>
                    <th>Monday</th>
                    <td><%= student.rateSchedules[0].monday %></td>
                    <td>Afterschool activity: soccer</td>
                </tr>
                  <tr>
                    <th>Tuesday</th>
                    <td><%= student.rateSchedules[0].tuesday %></td>
                    <td>Afterschool activity: soccer</td>
                </tr>
                  <tr>
                    <th>Wednesday</th>
                    <td><%= student.rateSchedules[0].wednesday %></td>
                    <td>Afterschool activity: soccer</td>
                </tr>
                  <tr>
                    <th>Thursday</th>
                    <td><%= student.rateSchedules[0].thursday %></td>
                    <td>Afterschool activity: soccer</td>
                    
                </tr>
                  <tr>
                    <th>Friday</th>
                    <td><%= student.rateSchedules[0].friday %></td>
                    <td>Afterschool activity: soccer</td>
                </tr>
            </tbody>
        </table>  
    </div>
</div>