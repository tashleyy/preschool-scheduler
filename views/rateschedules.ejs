<%- partial('partials/nav.ejs', {location: 'rateschedules'}) %>

<div class="container">
    <div class="row">
        <table class="table table-bordered table-striped" id="rate-schedule-table">
            <thead>
                <th>Rate Schedule Name</th>
                <th>M</th>
                <th>T</th>
                <th>W</th>
                <th>Th</th>
                <th>F</th>
                <th>Cost</th>
                <th>Start Month</th>
                <th>End Month</th>
                <th>Edit</th>
                <th>Delete</th>
            </thead>
            <tbody align="left">
            </tbody>
        </table>
    </div>
</div>

<div class="modal fade" id="rate-schedule-edit-modal">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h2>Edit Rate Schedule</h2>
            </div>
            <div class="modal-body">
                <form>
                    <div class="form-group">
                        <label for="edit-rate-schedule-name">Name</label>
                        <input type="text" class="form-control" id="edit-rate-schedule-name" required>
                    </div>
                    <div class="form-group">
                        <label for="edit-rate-schedule-cost">Cost</label>
                        <input type="text" class="form-control" id="edit-rate-schedule-cost" required>
                    </div>
                    <table class="table table-bordered table-striped">
                        <thead>
                            <th>Monday</th>
                            <th>Tuesday</th>
                            <th>Wednesday</th>
                            <th>Thursday</th>
                            <th>Friday</th>
                        </thead>
                    <tbody align="left">
                            <tr>
                                <td>
                                    <fieldset class="form-group">
                                        <div class="form-check">
                                            <label class="form-check-label">
                                                <input type="radio" class="form-check-input" name="edit-options-monday" value="none" checked>
                                                None
                                            </label>
                                        </div>
                                        <div class="form-check">
                                            <label class="form-check-label">
                                                <input type="radio" class="form-check-input" name="edit-options-monday" value="half">
                                                Half
                                            </label>
                                        </div>
                                        <div class="form-check">
                                            <label class="form-check-label">
                                                <input type="radio" class="form-check-input" name="edit-options-monday" value="full">
                                                Full
                                            </label>
                                        </div>
                                    </fieldset>
                                </td>
                                <td>
                                    <fieldset class="form-group">
                                        <div class="form-check">
                                            <label class="form-check-label">
                                                <input type="radio" class="form-check-input" name="edit-options-tuesday" value="none" checked>
                                                None
                                            </label>
                                        </div>
                                        <div class="form-check">
                                            <label class="form-check-label">
                                                <input type="radio" class="form-check-input" name="edit-options-tuesday" value="half">
                                                Half
                                            </label>
                                        </div>
                                        <div class="form-check">
                                            <label class="form-check-label">
                                                <input type="radio" class="form-check-input" name="edit-options-tuesday" value="full">
                                                Full
                                            </label>
                                        </div>
                                    </fieldset>
                                </td>
                                <td>
                                    <fieldset class="form-group">
                                        <div class="form-check">
                                            <label class="form-check-label">
                                                <input type="radio" class="form-check-input" name="edit-options-wednesday" value="none" checked>
                                                None
                                            </label>
                                        </div>
                                        <div class="form-check">
                                            <label class="form-check-label">
                                                <input type="radio" class="form-check-input" name="edit-options-wednesday" value="half">
                                                Half
                                            </label>
                                        </div>
                                        <div class="form-check">
                                            <label class="form-check-label">
                                                <input type="radio" class="form-check-input" name="edit-options-wednesday" value="full">
                                                Full
                                            </label>
                                        </div>
                                    </fieldset>
                                </td>
                                <td>
                                    <fieldset class="form-group">
                                        <div class="form-check">
                                            <label class="form-check-label">
                                                <input type="radio" class="form-check-input" name="edit-options-thursday" value="none" checked>
                                                None
                                            </label>
                                        </div>
                                        <div class="form-check">
                                            <label class="form-check-label">
                                                <input type="radio" class="form-check-input" name="edit-options-thursday" value="half">
                                                Half
                                            </label>
                                        </div>
                                        <div class="form-check">
                                            <label class="form-check-label">
                                                <input type="radio" class="form-check-input" name="edit-options-thursday" value="full">
                                                Full
                                            </label>
                                        </div>
                                    </fieldset>
                                </td>
                                <td>
                                    <fieldset class="form-group">
                                        <div class="form-check">
                                            <label class="form-check-label">
                                                <input type="radio" class="form-check-input" name="edit-options-friday" value="none" checked>
                                                None
                                            </label>
                                        </div>
                                        <div class="form-check">
                                            <label class="form-check-label">
                                                <input type="radio" class="form-check-input" name="edit-options-friday" value="half">
                                                Half
                                            </label>
                                        </div>
                                        <div class="form-check">
                                            <label class="form-check-label">
                                                <input type="radio" class="form-check-input" name="edit-options-friday" value="full">
                                                Full
                                            </label>
                                        </div>
                                    </fieldset>
                                </td>
                            </tr>
                        </tbody>
                    </table>
                    <div class="form-group">
                        <label for="edit-rate-schedule-start-month">Start Month</label>
                        <input class="form-control" type="month" id="edit-rate-schedule-start-month" required>
                    </div>
                    <div class="form-group">
                        <label for="edit-rate-schedule-end-month">End Month</label>
                        <input class="form-control" type="month" id="edit-rate-schedule-end-month" required>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary" onclick="editRateSchedule()">Submit</button>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="rate-schedule-delete-modal">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h2>Delete Rate Schedule</h2>
            </div>
            <div class="modal-body">
                <p>Are you sure you want to delete this rate schedule?</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-primary" onclick="deleteRateSchedule()">Delete</button>
            </div>
        </div>
    </div>
</div>

<div class="container">
    <button type="button"><a href="addrateschedule">Add Rate Schedule</a></button>
</div>