<%- partial('partials/nav.ejs', {location: 'addstudent'}) %>

<div class="container">
    <h1>New Student</h1>

    <div align="left">
        <form>
            <div class="form-group">
                <label for="name">Name</label>
                <input type="text" class="form-control" id="name" required>
            </div>
            <label for="startMonth" class="col-2 col-form-label">Start Month</label>
            <div class="col-10">
                <input class="form-control" type="month" id="startMonth" required>
            </div>
        </form>

        <form class="form-inline">
            <label class="sr-only" for="daySelect">Name</label>
            <select class="form-control" id="daySelect">
                <option>Monday</option>
                <option>Tuesday</option>
                <option>Wednesday</option>
                <option>Thursday</option>
                <option>Friday</option>
            </select>
            <div class="form-check form-check-inline">
                <label class="form-check-label">
                    <input class="form-check-input" type="checkbox" id="inlineCheckbox1" value="option1"> AM
                </label>
            </div>
            <div class="form-check form-check-inline">
                <label class="form-check-label">
                    <input class="form-check-input" type="checkbox" id="inlineCheckbox2" value="option2"> PM
                </label>
            </div>
            <div class="form-check form-check-inline disabled">
                <label class="form-check-label">
                    <input class="form-check-input" type="checkbox" id="inlineCheckbox3" value="option3"> Afterschool Activities
                </label>
            </div>
        </form>
        <button type="submit" class="btn btn-primary" onClick="addStudent();">Submit</button>
    </div>
</div>