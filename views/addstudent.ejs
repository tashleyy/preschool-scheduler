            <div class="form-group">
                <label for="add-student-start-day">Start Date</label>
                <input class="form-control" type="date" id="add-student-start-day" required>
            </div>
            <div class="form-group">
                <label for="add-student-end-day">End Date</label>
                <input class="form-control" type="date" id="add-student-end-day" required>
            </div>
            <button type="submit" class="btn btn-primary" onClick="addStudent();">Submit</button>
        </form>
    </div>
</div>